extends layout

block head
  meta(name='viewport', content='width=device-width, initial-scale=1')
  style.
    @import 'main.scss'
    .container {
    border: 2px solid #dedede;
    background-color: #f1f1f1;
    border-radius: 5px;
    padding: 10px;
    margin: 10px 0;
    }
    .darker {
    border-color: #ccc;
    background-color: #ddd;
    }
    .container::after {
    content: "";
    clear: both;
    display: table;
    }
    .container img {
    float: left;
    max-width: 60px;
    width: 100%;
    margin-right: 20px;
    border-radius: 50%;
    }
    .container img.right {
    float: right;
    margin-left: 20px;
    margin-right:0;
    }
    .time-right {
    float: right;
    color: #aaa;
    }
    .time-left {
    float: left;
    color: #999;
    }

block content
  h1 Chat!
  .container
    img(src='https://www.w3schools.com/w3images/bandmember.jpg', alt='Avatar', style='width:100%;')
    p Hello. How are you today?
    span.time-right 11:00
  .container.darker
    img.right(src='https://www.w3schools.com/w3images/avatar_g2.jpg', alt='Avatar', style='width:100%;')
    p Hey! I'm fine. Thanks for asking!
    span.time-left 11:01
  .container
    img(src='https://www.w3schools.com/w3images/bandmember.jpg', alt='Avatar', style='width:100%;')
    p Sweet! So, what do you wanna do today?
    span.time-right 11:02
  .container.darker
    img.right(src='https://www.w3schools.com/w3images/avatar_g2.jpg', alt='Avatar', style='width:100%;')
    p Nah, I dunno.  soccer.. or learn more coding perhaps?
    span.time-left 11:05
  .container
    .form-group
      label(class='col-sm-2 control-label', for='message') Enter Text:
      .col-sm-8
        textarea.form-control(name='message', id='message', rows='7')
      a.btn.btn-sm.btn-hover.btn-primary(href='#')
        span.share-alt(style='padding-right:3px;')
        | Submit
